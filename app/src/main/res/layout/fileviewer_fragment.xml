<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kivaaz.com.firebasedownloadupload.Fragments.GalleryFragment">


    <VideoView
        android:id="@+id/video_load"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:id="@+id/img_load"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
<TextView
    android:id="@+id/noFiles"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="No Files, Please Upload Something First"
    android:textSize="40sp"
    android:textAlignment="center"
    android:layout_gravity="center_vertical"
    />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/file_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >
    </android.support.v7.widget.RecyclerView>






</LinearLayout>
